<odoo>
  <data>
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course.form</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                        </group>                        
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="About">
                                This is an example of notebooks
                            </page>
                        </notebook>                                                            
                    </sheet>
                </form>
            </field>
        </record>
      
      
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="description"/>
                    <filter name="easy_courses" string="Easy Courses" domain="[('level', '=', 'easy')]"/>
                    <group string="Group By">
                        <filter name="by_difficulty" string="Difficulty" context="{'group_by': 'level'}"/>
                    </group>                               
                </search>
            </field>
        </record> 
      
  
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_easy_courses': 1}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first course
                </p>
            </field>
        </record>    

      
  </data>
</odoo>      